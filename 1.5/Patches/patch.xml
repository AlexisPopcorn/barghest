<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/BiomeDef[defName="BorealForest" or defName="BorealForest"
            or defName="TemperateForest"]/wildAnimals</xpath>
        <value>
            <Barghest>0.055</Barghest>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/BiomeDef[defName="SeaIce"]/wildAnimals</xpath>
        <value>
            <Barghest>0.01</Barghest>
